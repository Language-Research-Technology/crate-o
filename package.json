{
  "name": "crate-o",
  "version": "0.4.0",
  "description": "A VueJS UI component to create and edit Research Object Crate (RO-Crate) metadata",
  "keywords": [
    "RO-Crate",
    "rocrate",
    "research object",
    "research object crate",
    "metadata",
    "jsonld",
    "editor",
    "vue component",
    "ro-crate editor"
  ],
  "license": "GPL-3.0-or-later",
  "contributors": [
    "Alvin Sebastian (https://orcid.org/0000-0002-9086-1722)",
    "Moises Sacal Bonequi (https://orcid.org/0000-0002-4438-2755)",
    "Peter Sefton (https://orcid.org/0000-0002-3545-944X)",
    "Rosanna Smith (https://orcid.org/0009-0006-2241-3377)"
  ],
  "files": [
    "dist",
    "src/lib",
    "!/src/lib/**/*.cy.js"
  ],
  "main": "./dist/crate-o.js",
  "module": "./dist/crate-o.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/crate-o.js",
      "styles": "./dist/style.css"
    },
    "./css": "./dist/style.css",
    "./DefaultRouteHandler": "./src/lib/DefaultRouteHandler.js",
    "./*": "./*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Language-Research-Technology/crate-o"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && cp README.md dist",
    "build:library": "vite build --mode library",
    "preview": "vite preview --port 5173",
    "test": "cypress run --component --headless",
    "test:ui": "cypress run --component --browser chrome",
    "test:unit": "npm test -- --record --spec ",
    "cypress:open": "npx cypress open",
    "playwright:test:e2e": "npx playwright test --grep @e2e --project=chromium",
    "playwright:test:component": "npx playwright test --grep @component --project=chromium",
    "playwright:test:unit": "npx playwright test --grep @unit --project=node",
    "playwright:remote": "docker start playwright-server || docker run --name playwright-server -d --rm --init -p 3210:3210 --workdir /home/pwuser --user pwuser mcr.microsoft.com/playwright:v1.55.1 /bin/sh -c 'npx -y playwright run-server --port 3210 --host 0.0.0.0'",
    "serve": "npm run build && npm run preview"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.2",
    "leaflet": "^1.9.4",
    "leaflet-editable": "^1.2.0",
    "leaflet-gesture-handling": "^1.2.2",
    "leaflet.path.drag": "^0.0.6",
    "marked": "^15.0.7",
    "mime": "^4.0.1",
    "ro-crate": "^3.6.1"
  },
  "peerDependencies": {
    "element-plus": "^2.11.4",
    "vue": "^3.5.22"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@playwright/experimental-ct-vue": "^1.55.1",
    "@playwright/test": "^1.55.1",
    "@types/leaflet": "^1.9.3",
    "@types/leaflet-editable": "^1.2.2",
    "@types/node": "^24.5.2",
    "@types/wicg-file-system-access": "^2023.10.4",
    "@vitejs/plugin-vue": "^6.0.1",
    "ajv": "^8.12.0",
    "autoprefixer": "^10.4.18",
    "ejs": "^3.1.10",
    "postcss": "^8.5.6",
    "ro-crate-excel": "^1.1.2",
    "ro-crate-html": "^0.1.5",
    "ro-crate-modes": "github:Language-Research-Technology/ro-crate-modes",
    "rollup-plugin-visualizer": "^5.12.0",
    "tailwindcss": "^3.4.17",
    "unplugin-auto-import": "^20.2.0",
    "unplugin-element-plus": "^0.10.0",
    "unplugin-vue-components": "^29.1.0",
    "vite": "^7.1.7",
    "vue-router": "^4.5.1"
  }
}
